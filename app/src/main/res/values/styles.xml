<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="tile">
        <item name="android:layout_marginLeft">@dimen/side_margins</item>
        <item name="android:layout_marginRight">@dimen/side_margins</item>
        <item name="android:layout_marginTop">@dimen/top_margins</item>
        <item name="android:background">@color/colorPrimaryTransparent</item>
        <item name="android:padding">@dimen/tile_padding</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="detail">
        <item name="android:layout_marginLeft">@dimen/side_margins</item>
        <item name="android:layout_marginRight">@dimen/side_margins</item>
        <item name="android:layout_marginTop">@dimen/top_margins</item>
        <item name="android:padding">@dimen/tile_padding</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>
